<!-- Login Form -->
<main class="hero-login">
  <section class="jumbotron hero-jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <h2>Welcome Back!</h2>
          <br />
          <br />
          <form class="login">
            <div class="form-group">
              <label for="exampleInputEmail1">Email Address</label>
              <input type="email" required="required" class="form-control" id="email-input" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" required="required" class="form-control" id="password-input"
                placeholder="Password">
            </div>
            <p class="invalid-input">Invalid email or password</p>
            <br />
            <br />
            <button type="submit" class="btn btn-primary login">Login</button>
          </form>
          <div class="col-sm-3"></div>
        </div>
        <div class="col-sm-1"></div>
      </div>
  </section>
</main>
